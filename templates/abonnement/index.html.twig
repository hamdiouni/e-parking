{% extends 'base.html.twig' %}
{% block stylesheets %}
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,700"/>
  <link rel="stylesheet" href="{{ asset('css/fontawesome.min.css') }}"/>
  <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}"/>
  <link rel="stylesheet" href="{{ asset('css/templatemo-style.css') }}">
{% endblock %}

{% block title %}Liste des abonnements
{% endblock %}
{% block body %}
	
<a  href="{{ path('welcome') }}">
                  <b>back</b>
                </a>

	<h1>Liste des abonnements</h1>

	{% if abonnements is empty %}
		<p>Aucun abonnement trouv√©.</p>
	{% else %}
		<table>
			<thead>
				<tr>
					<th>ID</th>
					<th>Nom</th>
					<th>Prix</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for abonnement in abonnements %}
					<tr>
						<td>{{ abonnement.id }}</td>
						<td>{{ abonnement.nom }}</td>
						<td>{{ abonnement.tarif }}</td>
						<td>
							<a href="{{ path('abonnement_modifier', { 'id': abonnement.id }) }}">Modifier</a>
							<a href="{{ path('abonnement_supprimer', { 'id': abonnement.id }) }}">supprimer</a>

						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% endif %}

							<a href="{{ path('abonnement_nouveau') }}">ajouter un abonnement</a>

{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
{% endblock %}
