{% extends 'base.html.twig' %}

{% block body %}
    <h1>Détails du véhicule</h1>

    <dl>
        <dt>Matricule :</dt>
        <dd>{{ vehicule.matricule }}</dd>
        <dt>Marque :</dt>
        <dd>{{ vehicule.marque }}</dd>
        <dt>Modèle :</dt>
        <dd>{{ vehicule.modele }}</dd>
        <dt>Couleur :</dt>
        <dd>{{ vehicule.couleur }}</dd>
    </dl>

    <a href="{{ path('vehicule_edit', {'matricule': vehicule.matricule}) }}">Modifier</a>
    <a href="{{ path('vehicule_index') }}">Retour à la liste</a>
{% endblock %}
