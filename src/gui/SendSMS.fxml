<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.0-fcs" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.SendSMSController">
    <Label text="Recipient's phone number:" />
    <TextField fx:id="numberField" />

    <Label text="Message:" />
    <TextField fx:id="messageField" />

    <Button text="Send SMS" onAction="#sendSMS" />
</VBox>
